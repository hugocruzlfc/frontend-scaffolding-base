{
  "name": "@hugocruzlfc/frontend-base-project",
  "version": "0.0.3",
  "type": "module",
  "author": {
    "name": "Hugo Cruz",
    "email": "hugocruzlfc@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hugocruzlfc/frontend-scaffolding-base"
  },
  "keywords": [
    "react",
    "vitejs",
    "typescript",
    "tailwindcss",
    "zod",
    "vitest",
    "eslint",
    "prettier",
    "husky",
    "commitlint",
    "lint-staged",
    "react-hook-form"
  ],
  "engines": {
    "node": ">=20.12.2"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "prepare": "husky",
    "release": "standard-version"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.4.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.51.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/react": "^15.0.7",
    "@testing-library/user-event": "^14.5.2",
    "@total-typescript/tsconfig": "^1.0.4",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/ui": "^1.6.0",
    "autoprefixer": "^10.4.19",
    "clsx": "^2.1.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "husky": "^9.0.11",
    "jsdom": "^24.1.0",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "standard-version": "^9.5.0",
    "tailwind-merge": "^2.3.0",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "vitest": "^1.6.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{css,scss,md,html,json}": "prettier --ignore-unknown --write"
  }
}
